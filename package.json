{
  "name": "fortressguard",
  "version": "1.0.0",
  "description": "API de Segurança Digital para geração e validação de senhas seguras e criptografia de texto",
  "main": "src/server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0 <=22.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint . --ext .js",
    "format": "prettier --write 'src/**/*.js'",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:serve": "npx serve docs/api",
    "prepare": "husky install",
    "install:windows": "npm install --no-optional",
    "setup:windows": "npm install --global windows-build-tools && npm install"
  },
  "keywords": [
    "security",
    "encryption",
    "password",
    "api",
    "nodejs",
    "express"
  ],
  "author": "Jonhvmpok",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "morgan": "^1.10.0",
    "password-validator": "^5.3.0",
    "rate-limiter-flexible": "^7.0.0",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "babel-jest": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "src/**/*.test.js",
      "src/**/*.spec.js"
    ],
    "delay": "500"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jonhvmp/fortressguard.git"
  },
  "bugs": {
    "url": "https://github.com/Jonhvmp/fortressguard/issues"
  },
  "homepage": "https://github.com/Jonhvmp/fortressguard#readme"
}
