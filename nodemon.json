{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "tests",
    "coverage",
    "docs",
    "*.test.js",
    "*.spec.js"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --experimental-specifier-resolution=node --experimental-modules"
  },
  "watch": ["src/"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json",
  "delay": "500"
}